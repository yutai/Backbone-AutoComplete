<h1>Listing variations</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Banner</th>
    <th>Headline</th>
    <th>Adtext</th>
    <th>Destination url</th>
    <th>Display url</th>
    <th>Img src</th>
    <th>Fpa url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @variations.each do |variation| %>
  <tr>
    <td><%= variation.id %></td>
    <td><%= variation.banner_id %></td>
    <td><%= variation.headline %></td>
    <td><%= variation.adtext %></td>
    <td><%= variation.destination_url %></td>
    <td><%= variation.display_url %></td>
    <td><%= variation.img_src %></td>
    <td><%= variation.fpa_url %></td>
    <td><%= link_to 'Show', variation %></td>
    <td><%= link_to 'Edit', edit_variation_path(variation) %></td>
    <td><%= link_to 'Destroy', variation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

